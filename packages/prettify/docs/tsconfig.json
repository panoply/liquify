{
  "exclude": ["node_modules/**", "public"],
  "include": ["site/app/**/*.ts"],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "types": ["./scripts/eleventy.d.ts"]
    }
  }
}
