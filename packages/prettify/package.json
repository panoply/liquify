{
  "name": "@liquify/prettify",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ <nicos@gmx.com>",
  "description": "Liquid Language beautification support for multiple languages.",
  "engines": {
    "pnpm": ">=4",
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/liquify.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/liquify/issues"
  },
  "main": "./package/index.js",
  "types": "package/@types/index.d.ts",
  "exports": {
    "require": "./package/index.js",
    "import": "./package/index.esm.js"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava test/dev.test.js --color --verbose --watch",
    "test:cases": "ava ./test/cases/* --verbose --color --watch"
  },
  "eslintConfig": {
    "extends": ["@liquify/eslint-config-ts"],
    "rules": {
      "no-unmodified-loop-condition": "off"
    }
  },
  "ava": {
    "require": ["esm"],
    "babel": {
      "testOptions": {
        "babelrc": true,
        "configFile": false
      }
    },
    "files": ["test/**/*.test.js"],
    "concurrency": 5
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@liquify/eslint-config-ts": "workspace:^1.0.1",
    "@liquify/rollup-plugin-utils": "workspace:^0.1.1",
    "@liquify/tsconfig": "workspace:^1.0.0",
    "@rollup/plugin-beep": "^0.2.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "ava": "^3.15.0",
    "rollup": "^2.53.3",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "ava": "^3.15.0",
    "rollup": "^2.53.3"
  },
  "dependencies": {
    "prettier": "^2.3.2"
  }
}
