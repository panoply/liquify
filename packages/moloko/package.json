{
  "name": "@liquify/moloko",
  "version": "1.0.0",
  "description": "Liquid code editing and embedded support for the browser.",
  "main": "package/moloko.js",
  "module": "package/moloko.js",
  "types": "index.d.ts",
  "bin": {
    "moloko": "./bin/moloko.cjs"
  },
  "exports": {
    "import": "./package/moloko.js"
  },
  "scripts": {
    "dev": "concurrently \"tsup --watch\" \"pnpm style:watch\" \"http-server -o\"",
    "build": "pnpm style:build && pnpm ace && tsup --minify",
    "ace": "pnpm exec ./ace.sh",
    "style:build": "sass ./src/theme/moloko.scss:./src/build/moloko.css --no-source-map",
    "style:watch": "sass ./src/theme/moloko.scss:./src/build/moloko.css --watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "eslintConfig": {
    "extends": "@liquify/eslint-config",
    "rules": {
      "no-use-before-define": "off"
    },
    "ignorePatterns": [
      "types/ace.d.ts",
      "*.js"
    ]
  },
  "prettier": "@liquify/prettier-config",
  "stylelint": {
    "extends": [
      "@sissel/stylelint-config"
    ],
    "ignoreFiles": [
      "public",
      "node_modules"
    ],
    "rules": {
      "selector-class-pattern": "^[a-zA-Z_-]+$",
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "ignore": [
            "after-comment",
            "first-nested"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@liquify/eslint-config": "workspace:*",
    "@liquify/prettier-config": "workspace:*",
    "@liquify/prettify": "workspace:*",
    "@sissel/stylelint-config": "^1.0.0",
    "@types/lz-string": "^1.3.34",
    "@types/mithril": "^2.0.11",
    "concurrently": "^7.5.0",
    "http-server": "^14.1.1",
    "mithril": "^2.2.2",
    "sass": "^1.56.0",
    "stylelint": "^14.14.1",
    "stylint": "^2.0.0",
    "tsup": "^6.4.0"
  },
  "dependencies": {
    "ansis": "^1.5.5",
    "lz-string": "^1.4.4",
    "minimist": "^1.2.7"
  },
  "peerDependencies": {
    "@liquify/prettify": "workspace:*",
    "mithril": "^2.2.2"
  }
}
